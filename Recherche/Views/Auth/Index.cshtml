@model Models.AuthVM

@{
    Layout = null;
}


<form asp-controller="Auth" asp-action="Index" method="post" class="my-4">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="PassWord">
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="KeepLoggedIn">
        <label class="form-check-label" for="exampleCheck1">Keep me logged in</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
